<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:gravity="center">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/bottom_AppBar"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp" >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_NavigationView"
            android:layout_marginRight="16dp"
            app:menu="@menu/bottom_nav_bar"
            android:background="@drawable/transparent_background" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/tvText"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp" />

                <EditText
                    android:id="@+id/tvText2"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="95dp" />

                <ImageButton
                    android:id="@+id/btnSpeak"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/microphone" />

                <ImageButton
                    android:id="@+id/btnSpeak2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginEnd="50dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/microphone" />

                <Button
                    android:id="@+id/btnfetch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="135dp"
                    android:fontFamily="@font/playfairdisplay_regular"
                    android:text="Generate Symbol" />

                <TextView
                    android:id="@+id/tvFinal"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/color_border"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/buttonreacfetch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="265dp"
                    android:fontFamily="@font/playfairdisplay_regular"
                    android:text="Generate Reaction" />

                <TextView
                    android:id="@+id/tvReaction"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="320dp"
                    android:background="@drawable/color_border"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/btnimagefetch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="430dp"
                    android:fontFamily="@font/playfairdisplay_regular"
                    android:text="More info" />

                <TextView
                    android:id="@+id/tvImage"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="490dp"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="550dp"
                    android:src="@drawable/image_icon_chemist" />

                <ImageButton
                    android:id="@+id/ibInfo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/question" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="207dp"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="337dp"
                    android:visibility="invisible" />

            </androidx.cardview.widget.CardView>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>